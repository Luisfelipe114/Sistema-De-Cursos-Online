<div class="container-fluid">
  <h1>Admin Categories</h1>
  <table class="table">
    <thead>
      <tr>
                  <th>Nome</th>
                <th></th>
      </tr>
    </thead>
    <tbody>
      <% @admin_categories.each do |admin_category| %>
        <tr>
                      <td>
              <%= admin_category.nome %>
            </td>      
                    <td>
          <%= link_to 'Mostrar', admin_category, class:"btn btn-light min-width-btn" %>
          <%= link_to 'Editar', edit_admin_category_path(admin_category),class:"btn btn-primary min-width-btn"  %>     
          <%= link_to 'Deletar', admin_category, method: :delete, data: { confirm: 'Tem certeza?' }, class:"btn btn-danger min-width-btn"%>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <br>
  <%= link_to 'Novo Admin Category', new_admin_category_path,class:"btn btn-success min-width-btn" %>
</div>