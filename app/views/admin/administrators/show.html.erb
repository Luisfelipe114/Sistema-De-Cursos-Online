<div class="container">
  <h1>Detalhes</h1>
  <div class="form-group">
    <%= form_with(model: @admin_administrator, local: true) do |form| %>
      <div class="form-group">
        <%= form.label :nome %>
        <%= form.text_field :nome, id: :nome, class: "form-control", readonly: true %>
      </div>
      <div class="form-group">
        <%= form.label :cpf %>
        <%= form.text_field :cpf, id: :cpf, class: "form-control", readonly: true %>
      </div>
      <div class="form-group">
        <%= form.label :telefone %>
        <%= form.text_field :telefone, id: :telefone, class: "form-control", readonly: true %>
      </div>
      <div class="form-group">
        <%= form.label :email %>
        <%= form.text_field :email, id: :email, class: "form-control", readonly: true %>
      </div>
      <!-- Address Details -->
      <% if @address %>
       <div class="form-group">
          <%= form.label :rua %>
          <%= form.text_field :rua, id: :rua, class: "form-control", value: @address.rua, readonly: true %>
        </div>
        <div class="form-group">
          <%= form.label :numero %>
          <%= form.text_field :numero, id: :numero, class: "form-control", value: @address.numero, readonly: true %>
        </div>
        <div class="form-group">
          <%= form.label :bairro %>
          <%= form.text_field :bairro, id: :bairro, class: "form-control", value: @address.bairro, readonly: true %>
        </div>
        <div class="form-group">
          <%= form.label :cep %>
          <%= form.text_field :cep, id: :cep, class: "form-control", value: @address.cep, readonly: true %>
        </div>
        <div class="form-group">
          <%= form.label :estado %>
          <%= form.text_field :estado, id: :estado, class: "form-control", value: @address.estado, readonly: true %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="mt-3">
    <%= link_to 'Editar', edit_admin_administrator_path(@admin_administrator), class: "btn btn-primary min-width-btn" %>
    <%= link_to 'Voltar', admin_administrators_path, class: "btn btn-light min-width-btn" %>
    <%= link_to 'Endereço', admin_administrator_addresses_path(@admin_administrator), class: "btn btn-success min-width-btn" %>
    <%= link_to 'Conta Bancária', admin_administrator_bank_accounts_path(@admin_administrator), class: "btn btn-success min-width-btn" %>
  </div>
</div>
