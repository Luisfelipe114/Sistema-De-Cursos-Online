<div class="page-header">
    <%= form_for(@user, url: client_new_signup_path, html: { class: "form-signin" }) do |f| %>
        <% if @user.errors.any? %>
            <div class="alert alert-danger alert-dismissable" role="alert">
            <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
            <h4>Verifique os erros abaixo:</h4>

            <ul>
            <% @user.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
            </ul>
            </div>
        <% end %>
        
        <h1 class="h3 mb-3 font-weight-normal">Cadastrar</h1>
        
        <div class="form-group">
            <%= f.label :nome, class: "sr-only" %>
            <%= f.text_field :nome, placeholder: "Nome", class: "form-control", required: true %>
        </div>
        
        <div class="form-group cpf">
            <%= f.label :cpf, "CPF", class: "sr-only" %>
            <%= f.text_field :cpf, placeholder: "CPF", class: "form-control", required: true %>
        </div>
        
        <div class="form-group">
            <%= f.label :telefone, class: "sr-only" %>
            <%= f.text_field :telefone, placeholder: "Telefone", class: "form-control", required: true %>
        </div>
        
        <div class="form-group">
            <%= f.label :email, class: "sr-only" %>
            <%= f.email_field :email, placeholder: "Email", class: "form-control", required: true, autofocus: true %>
        </div>
        
        <div class="form-group">
            <%= f.label :password, "Senha", class: "sr-only" %>
            <%= f.password_field :password, placeholder: "Senha", class: "form-control", required: true %>
        </div>

        <%= f.submit "Cadastrar", class: "btn btn-lg btn-primary btn-block mt-3", style: "width: 100%" %>

        <div style="margin-top: 8px">
            <span>Já possui uma conta? Faça login </span>
            <%= link_to 'aqui', client_login_path, style:"text-decoration: none; color: blue;"%>
        </div>

        <p class="mt-5 mb-3 text-muted">© 2024</p>
    <% end %>
</div>
