<div class="container">
  <h1>Sales Video Details</h1>
  <%= form_with(model: @video, local: true, url: sales_course_video_path(@course, @video)) do |form| %>
        <div class="form-group">
          <%= form.label :nome %>
          <%= form.text_field :nome, id: :nome ,class:"form-control", readonly:true%>
        </div>
        <div class="form-group">
          <%= form.label :descricao %>
          <%= form.text_area :descricao, id: :descricao ,class:"form-control", readonly:true%>
        </div>
        <div class="form-group">
          <%= form.label :link %>
          <%= form.text_field :link, id: :link ,class:"form-control", readonly:true%>
        </div>
    <% end %>
  <%= link_to 'Editar', edit_sales_course_video_path(@course, @video),class:"btn btn-primary min-width-btn" %> 
  <%= link_to 'Voltar', sales_course_videos_path(@course),class:"btn btn-light min-width-btn" %>
</div>