<div class="container">
  <h1>Sales Course Details</h1>
  <%= form_with(model: @course, local: true, url: sales_seller_course_path(@seller, @course)) do |form| %>
                  <div class="form-group">
          <%= form.label :nome %>
          <%= form.text_field :nome, id: :nome ,class:"form-control", readonly:true%>
        </div>
                        <div class="form-group">
          <%= form.label :descricao %>
          <%= form.text_area :descricao, id: :descricao ,class:"form-control", readonly:true%>
        </div>
                        <div class="form-group">
          <%= form.label :link %>
          <%= form.text_field :link, id: :link ,class:"form-control", readonly:true%>
        </div>
            <% end %>
  <%= link_to 'Editar', edit_sales_seller_course_path(@seller, @course),class:"btn btn-primary min-width-btn" %> 
  <%= link_to 'Voltar', sales_seller_courses_path(@seller),class:"btn btn-light min-width-btn" %>
</div>