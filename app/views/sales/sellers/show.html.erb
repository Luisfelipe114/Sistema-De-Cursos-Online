<div class="container">
  <h1>Sales Seller Details</h1>
  <%= form_with(model: @seller, local: true) do |form| %>
         <div class="form-group">
          <%= form.label :nome %>
          <%= form.text_field :nome, id: :nome ,class:"form-control", readonly:true%>
        </div>
        <div class="form-group">
          <%= form.label :cpf %>
          <%= form.text_field :cpf, id: :cpf ,class:"form-control", readonly:true%>
        </div>
        <div class="form-group">
          <%= form.label :telefone %>
          <%= form.text_field :telefone, id: :telefone ,class:"form-control", readonly:true%>
        </div>
        <div class="form-group">
          <%= form.label :email %>
          <%= form.text_field :email, id: :email ,class:"form-control", readonly:true%>
        </div>
      <% end %>
  <div class="mt-3">
    <%= link_to 'Editar', edit_sales_seller_path(@seller),class:"btn btn-primary min-width-btn" %>
    <%= link_to 'Endereço', sales_seller_addresses_path(@seller), class: "btn btn-success min-width-btn" %>
      <%= link_to 'Conta Bancária', sales_seller_bank_accounts_path(@seller), class: "btn btn-success min-width-btn" %>
  </div>
</div>