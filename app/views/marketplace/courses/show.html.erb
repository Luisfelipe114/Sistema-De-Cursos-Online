<!-- app/views/courses/show.html.erb -->
<style>
  .course-img {
    width: 100%;
    max-width: 600px;
    height: auto;
    max-height: 400px;
    object-fit: cover;
  }
</style>

<div class="container">
  <h1><%= @course.nome %></h1>
  <div class="row">
    <div class="col-md-12">
      <% if @course.picture.attached? %>
        <%= image_tag @course.picture, class: "course-img", alt: "Course Image" %>
      <% else %>
        <img src="https://via.placeholder.com/600x400" class="course-img" alt="Default Image">
      <% end %>
    </div>
  </div>
  <div class="row mt-3">
    <div class="col-md-6">
      <p><strong>Categoria:</strong> <%= @course.admin_categories.nome %></p>
      <p><strong>Preço:</strong> <%= number_to_currency(@course.preco) %></p>
      <p><strong>Descrição:</strong> <%= @course.descricao %></p>
      <!-- Adicione outros detalhes do curso aqui -->
    </div>
  </div>
  <div class="mt-3">
    <%= link_to 'Voltar', marketplace_root_path, class: "btn btn-primary" %>
     <%= link_to "Comprar", marketplace_root_path, class: "btn btn-success m-2"%>
  </div>
</div>
